generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Respondent {
  id           String  @id @default(uuid()) @db.VarChar(100)
  nama         String? @db.VarChar(100)
  jenisKelamin Gender  @default(MALE)
  pendidikan   String  @db.VarChar(100)
  usia         String  @db.VarChar(100)
  survey       Survey?

  @@map("respondent")
}

model Survey {
  id           String     @id @default(uuid()) @db.VarChar(100)
  respondentId String     @unique
  respondent   Respondent @relation(fields: [respondentId], references: [id])
  tanggal      DateTime   @default(now())
  createdAt    DateTime   @default(now())
  result       Result[]

  @@map("survey")
}

model Result {
  id          String        @id @default(uuid()) @db.VarChar(100)
  surveyId    String
  dimension   String
  expectation Expectation[]
  perception  Perception[]
  survey      Survey        @relation(fields: [surveyId], references: [id])

  @@map("result")
}

model Expectation {
  id       String @id @default(uuid()) @db.VarChar(100)
  resultId String
  result   Result @relation(fields: [resultId], references: [id])
  answer   Int

  @@map("expectation")
}

model Perception {
  id       String @id @default(uuid()) @db.VarChar(100)
  resultId String
  result   Result @relation(fields: [resultId], references: [id])
  answer   Int

  @@map("perception")
}

enum Gender {
  MALE
  FEMALE
}
